@model KKIHUB.ContentSync.Web.Models.SyncModel
@{
    ViewBag.Title = "Home Page";
    var syncId = Guid.NewGuid().ToString();
}

<div class="main-content-page">
    <div class="jumbotron">
        <h1>Content Sync Service</h1>
        <p class="lead">Start your content sync between your Acoustic Hub.</p>
    </div>

    <div class="row">
        <div class="text-center main-sync-page">
            <p class="field">Start your content sync between your Acoustic Hubs.</p>

			<div class="content-pull-form">
				<div class="field">
					<label for="SourceHub" class="ff-label" id="source-hub">SourceHub</label>
					<select name="source-hub-field" id="sourcehub-input" class="field-source-hub">
						@foreach (var hub in Model.HubInfo)
						{
							<option value="@hub.HubName">@hub.HubName</option>
						}
					</select>
				</div>
				<div class="field">
					<label for="TargetHub" class="ff-label" id="source-hub">TargetHub</label>
					<select name="target-hub-field" id="targethub-input" class="field-target-hub">
						@foreach (var hub in Model.HubInfo)
						{
							<option value="@hub.HubName">@hub.HubName</option>
						}
					</select>
				</div>
				<div class="field">
					<label for="Library" class="ff-label" id="library">Library</label>
					<select type="text" id="library-input" class="field-library" placeholder="" aria-placeholder="" name="library-field">
						<option value="" selected>All</option>
						@foreach (KeyValuePair<string, string> library in ViewBag.Libraries)
						{
							<option value="@library.Key">@library.Value</option>
						}
					</select>
				</div>
				<div class="field">
					<label for="Days" class="ff-label" id="source-hub">From</label>
					<input type="date"  id="date-from"/>
				</div>
				<div class="field">
					<label for="Days" class="ff-label" id="source-hub">To</label>
					<input type="date" id="date-to"/>
				</div>

				<div class="field btnDiv">
					<input type="button" class="sync-start" data-sync-id="@syncId" id="btnsubmit" value="View Changes">
				</div>
			</div>
				<hr>
				<div class="sync-result">
				</div>
				<div class=" field button-push hide">
					<input type="button" class="push-sync" data-sync-id="@syncId" id="btnPush" value="Push Content">
					<p>Pushing contents will also push associated assets to the target hub!</p>
				</div>
			</div>
    </div>
</div>

<div class="overlay" style="display:none">
    <div class="d-flex justify-content-center">
        <div class="overlay-message">
            <h2 class="overlay-msg-text"></h2>
        </div>
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
</div>